{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*",
        "src/types/**/*.d.ts" // More generic pattern to ensure it's included
    ],
    "exclude": [
        "node_modules",
        "src/ignore/**/*"
    ]
}